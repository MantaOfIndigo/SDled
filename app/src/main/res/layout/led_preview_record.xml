<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_dark_blue"
        android:layout_marginTop="15dp"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_gravity="top"
        android:layout_marginTop="-25dp">

        <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Element"
            android:id="@+id/preview_led_name"
            android:layout_weight="0.6"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/white" />

        <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/preview_led_cost"
            android:gravity="right"
            android:layout_weight="0.4"
            android:textSize="22dp"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/white"
            android:paddingRight="5dp" />
    </LinearLayout>

</LinearLayout>