<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@color/custom_bright_blue">

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:id="@+id/day_record_layout_listener">

                <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Domenica"
                    android:id="@+id/day_record_day_string"
                    android:textSize="20dp"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <ToggleButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="New ToggleButton"
                android:id="@+id/day_records_toggle"
                android:background="@drawable/ic_toggle"
                android:textOff=""
                android:textOn=""
                android:checked="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:layout_weight="0.7" />

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@color/custom_blue"
                android:layout_weight="0.3" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.nololed.andreamantani.nololed.FontClasses.CustomRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Ore:"
                        android:id="@+id/textView21"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="#f3f3f3"
                        android:layout_weight="0.2" />

                    <com.nololed.andreamantani.nololed.FontClasses.CustomRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/day_record_hours"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:textAlignment="gravity"
                        android:gravity="right"
                        android:textColor="#f3f3f3"
                        android:layout_marginRight="10dp"
                        android:singleLine="true" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>