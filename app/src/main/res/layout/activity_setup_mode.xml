<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.3"
        android:background="@color/custom_grey"
        android:id="@+id/mode_manual">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.nololed.andreamantani.nololed.FontClasses.CustomItalicFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Manuale"
                android:id="@+id/textViewManuale"
                android:textSize="28dp"
                android:textColor="@color/custom_dark_blue"
                android:layout_margin="10dp"
                android:layout_gravity="right" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:id="@+id/imageViewManuale"
                android:src="@drawable/cog1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:translationZ="1dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:layout_alignTop="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Imposta l&apos;orario standard manualmente"
                android:id="@+id/textView19"
                android:textColor="@color/custom_dark_blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:translationZ="10dp" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.3"
        android:background="@color/custom_bright_blue"
        android:id="@+id/mode_24">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.nololed.andreamantani.nololed.FontClasses.CustomItalicFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="24h"
                android:id="@+id/textView16"
                android:textSize="28dp"
                android:textColor="@android:color/white"
                android:layout_margin="10dp"
                android:layout_gravity="right" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:id="@+id/imageView24"
                android:src="@drawable/cog2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:translationZ="1dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:layout_alignTop="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Imposta l&apos;orario standard a 24 ore su 24"
                android:id="@+id/textView24h"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:translationZ="10dp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.3"
        android:background="@color/custom_dark_blue"
        android:id="@+id/mode_solar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.nololed.andreamantani.nololed.FontClasses.CustomItalicFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Solare"
                android:id="@+id/textViewSolare"
                android:textSize="28dp"
                android:textColor="@android:color/white"
                android:layout_margin="10dp"
                android:layout_gravity="right" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:id="@+id/imageViewSolare"
                android:src="@drawable/cog3"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:translationZ="1dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:layout_alignTop="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/ora_solare"
                android:id="@+id/textViewSolare"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:translationZ="10dp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>