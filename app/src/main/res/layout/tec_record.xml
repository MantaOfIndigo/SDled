<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/record_tap_on"
    android:paddingTop="1dp"
    android:paddingBottom="1dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#63ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="45dp"
            android:id="@+id/record_main"
            android:clickable="true">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/record_img"
                android:src="@drawable/photoicon"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp">

                    <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="quantitÃ :"
                        android:id="@+id/textView14"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:textSize="15dp" />

                    <com.nololed.andreamantani.nololed.FontClasses.CustomRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/record_title"
                        android:text="Titolo"
                        android:gravity="right"
                        android:textColor="#FFFF4081"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp" />
                </LinearLayout>

                <com.nololed.andreamantani.nololed.FontClasses.CustomItalicFont
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:ellipsize="end"
                    android:text="descrizione"
                    android:maxLines="2"
                    android:id="@+id/record_desc"
                    android:padding="2dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-45dp"
            android:clickable="true"
            android:id="@+id/record_delete">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|left|right"
                android:background="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>