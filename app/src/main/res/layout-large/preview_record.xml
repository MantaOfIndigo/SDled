<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_blue"
        android:layout_marginTop="15dp"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_gravity="top"
        android:layout_marginTop="-30dp">

        <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Element"
            android:id="@+id/preview_name"
            android:layout_weight="0.4"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:paddingRight="7dp" />

        <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:textSize="18dp"
            android:id="@+id/preview_qta"
            android:layout_weight="0.2"
            android:gravity="right"
            android:textColor="@android:color/white" />
        <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="qta"
            android:textSize="13dp"
            android:id="@+id/textqta"
            android:layout_weight="0.1"
            android:layout_marginRight="3dp" />

        <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/preview_cost"
            android:gravity="right"
            android:layout_weight="0.3"
            android:textSize="25dp"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/white"
            android:paddingRight="5dp" />

    </LinearLayout>

</LinearLayout>