<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custom_med_grey"
        android:clickable="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/custom_bright_blue">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.nololed.andreamantani.nololed.FontClasses.CustomItalicFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="AttivitÃ :"
                    android:id="@+id/textView17"
                    android:layout_marginLeft="15dp"
                    android:textColor="#5f5f5f"
                    android:textSize="18dp" />

                <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name"
                    android:id="@+id/sys_tec_name"
                    android:textSize="27dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sys_tec_scroll"
                android:layout_column="8"
                android:fillViewport="false"
                android:layout_marginBottom="120dp"
                android:paddingTop="100dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/sys_tec_table">

                </TableLayout>
            </ScrollView>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/plusiconnew"
                android:onClick="addNewTecnology"
                android:layout_marginTop="-90dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>