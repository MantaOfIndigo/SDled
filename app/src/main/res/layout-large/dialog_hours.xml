<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="24h"
                    android:id="@+id/textView38"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0.9"
                    android:textColor="@android:color/white" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/daily_hour_24"
                    android:checked="false"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:layout_gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Unico turno"
                    android:id="@+id/textView39"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0.9"
                    android:textColor="@android:color/white" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/daily_hour_one_turn"
                    android:checked="false"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:layout_gravity="right" />
            </LinearLayout>

            <com.nololed.andreamantani.nololed.FontClasses.CustomRegularFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mattina"
                android:id="@+id/textView14"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="0.9" />

            <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Inizio orario:"
                android:id="@+id/inizioorarioam"
                android:textColor="#f3f3f3"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/custom_greenblue"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/daily_hour_begin_am"
                android:paddingRight="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp">

                <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="7:00"
                    android:id="@+id/daily_hour_txt_beginam"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textColor="@color/custom_dark_blue"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1" />

                <ToggleButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton6"
                    android:background="@drawable/mini_check"
                    android:textOn=""
                    android:textOff=""
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:enabled="false"
                    android:layout_margin="5dp" />

            </LinearLayout>

            <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fine orario:"
                android:id="@+id/fineorarioam"
                android:textColor="#f3f3f3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/custom_greenblue"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/daily_hour_end_am"
                android:paddingRight="10dp"
                android:layout_gravity="center_horizontal">

                <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="7:00"
                    android:id="@+id/daily_hour_txt_endam"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textColor="@color/custom_dark_blue"
                    android:layout_weight="0.7"
                    android:layout_gravity="center_vertical" />

                <ToggleButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="New ToggleButton"
                    android:id="@+id/daily_hour_toggleAM"
                    android:background="@drawable/ic_mini_toggle"
                    android:textOn=""
                    android:textOff=""
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal">

            <com.nololed.andreamantani.nololed.FontClasses.CustomRegularFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pomeriggio"
                android:id="@+id/textView13"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp" />

            <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Inizio orario:"
                android:id="@+id/inizioorariopom"
                android:textColor="#f3f3f3"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/custom_greenblue"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/daily_hour_begin_pm"
                android:paddingRight="10dp"
                android:layout_gravity="center_horizontal">

                <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="7:00"
                    android:id="@+id/daily_hour_txt_beginpm"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textColor="@color/custom_dark_blue"
                    android:layout_weight="0.7"
                    android:layout_gravity="center_vertical" />

                <ToggleButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="New ToggleButton"
                    android:id="@+id/daily_hour_togglePMB"
                    android:background="@drawable/ic_mini_toggle"
                    android:textOn=""
                    android:textOff=""
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:enabled="false" />

            </LinearLayout>

            <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fine orario:"
                android:id="@+id/fineorariopom"
                android:textColor="#f3f3f3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/custom_greenblue"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/daily_hour_end_pm"
                android:paddingRight="10dp"
                android:layout_gravity="center_horizontal">

                <com.nololed.andreamantani.nololed.FontClasses.CustomExtraLightFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="7:00"
                    android:id="@+id/daily_hour_txt_endpm"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textColor="@color/custom_dark_blue"
                    android:layout_weight="0.7"
                    android:layout_gravity="center_vertical" />

                <ToggleButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="New ToggleButton"
                    android:id="@+id/daily_hour_togglePM"
                    android:background="@drawable/ic_mini_toggle"
                    android:textOn=""
                    android:textOff=""
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.nololed.andreamantani.nololed.FontClasses.CustomButtonFont
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ANNULLA"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/dialog_date_null"
                android:layout_weight="0.5"
                android:background="#bcbcbc"
                android:textColor="#f3f3f3"/>

            <com.nololed.andreamantani.nololed.FontClasses.CustomButtonFont
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AVANTI"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/dialog_date_ok"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>