        android:textColor="#BC4676" /> -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/imageView5"
                android:background="@drawable/decoration3"
                android:layout_alignParentBottom="true"
                android:maxWidth="300dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView26"
                    android:layout_weight="0.3"
                    android:background="#91ec07" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView27"
                    android:layout_weight="0.3"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView29"
                    android:layout_weight="0.3"
                    android:background="@android:color/holo_red_light" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/imageView"
            android:src="@drawable/sd_logo"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.nololed.andreamantani.nololed.FontClasses.CustomItalicFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="App"
            android:id="@+id/textView"
            android:textSize="16dp"
            android:textColor="#677a82"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:gravity="center_vertical"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/home_button_add"
            android:background="@drawable/plusiconnew"
            android:onClick="addNewSystem"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="150dp" />

    </LinearLayout>

</RelativeLayout>


